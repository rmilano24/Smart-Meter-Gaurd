<div class="main-header background background-image-heading-{{ page.heading }}" style="background-image:url({{ 'about_header_bg.jpg' | asset_url }}">
  <div class="container">
    <h1>{{ page.title }}</h1>
  </div>
</div>
{% include 'breadcrumb' %}
<div class="container">

  <div class="wysiwyg">
    {{ page.content }}	
  </div>
</div>
<section>

  {% assign section1 = settings.about_section_1 %}
  {% assign section2 = settings.about_section_2 %}
  {% assign section3 = settings.about_section_3 %}
  {% assign section4 = settings.about_section_4 %}
  {% assign section5 = settings.about_section_5 %}


  <div class="container">

    {%if section1 %}
    {%capture about_1_img%}about_shop.png{%endcapture%}
    {%capture about_1_title%}about_shop_title{%endcapture%}
    {%capture about_1_des%}about_shop_des{%endcapture%}

    <div class="padding-vertical-50 border-bottom">
      <div class="row">
        <div class="col-md-8 col-md-offset-2">

          <div class="awe-box center">
            <div class="awe-box-media">
              <div class="awe-box-image">
                {{about_1_img | asset_url | img_tag}}
              </div>
            </div><!-- /.awe-box-media -->

            <div class="awe-box-content">
              <h2>{{settings[about_1_title]}}</h2>
              <p>{{settings[about_1_des]}}</p>
            </div><!-- /.awe-box-content -->
          </div><!-- /.awe-box -->

        </div>
      </div>
    </div><!-- /.padding-vertical-50 -->
    {%endif%}

    {% if section2 %}
    <div class="padding-vertical-50 border-bottom">
      <div class="row">

        {%for i in (1..3)%}
        {%capture about_2_col_des%}about_2_col_{{i}}_des{%endcapture%}
        {%capture about_2_col_title%}about_2_col_{{ i }}_title{%endcapture%}
        {%capture about_2_col_img%}about_2_col_{{ i }}.jpg{%endcapture%}

        <div class="col-md-4 col-sm-4">

          <div class="awe-box center box-hover margin-bottom-25">
            <div class="awe-box-media">
              <div class="awe-box-icon icon-large">
                {{ about_2_col_img | asset_url | img_tag }}
              </div>
            </div><!-- /.awe-box-media -->

            <div class="awe-box-content">
              <h3>{{settings[about_2_col_title]}}</h3>
              <p>{{settings[about_2_col_des]}}</p>
            </div><!-- /.awe-box-content -->
          </div><!-- /.awe-box -->

        </div>
        {%endfor%}

      </div><!-- /.row -->
    </div><!-- /.padding-vertical-50 -->

    {%endif%}


    {% if section3 %}

    <div class="padding-vertical-80">
      <div class="row">
        <div class="col-md-10 col-md-offset-1">
          <blockquote class="blockquote large center">
            <p>{{settings.about_ceo_des}}</p>
            <footer>
              <h4>{{settings.about_ceo_title}}</h4>
              <span>CEO</span>
            </footer>
          </blockquote>
        </div>
      </div>
    </div><!-- /.padding-vertical-80 -->
    {%endif%}



  </div><!-- /.container -->
</section><!-- /section -->
{% if section4 %}
<section class="background background-color-dark background-image-section-counting background-fixed" style="background-image: url({{ 'about_4_bg.jpg' | asset_url }}">
  <div class="container">

    <div class="padding-vertical-100">
      <div class="row">
        {%for i in (1..4)%}
        {%capture title %}about_count_{{i}}{% endcapture %}
        {%capture  number%}about_count_{{i}}_number{%endcapture%}
        <div class="col-md-3 col-sm-3 col-xs-3">
          <div class="awe-counting">
            <h4>{{settings[title]}}</h4>
            <span>{{settings[number]}}</span>
          </div>
        </div><!-- /.awe-counting -->

        {%endfor%}
      </div><!-- /.row -->
    </div>

  </div><!-- /.container -->
</section><!-- /section -->
{%endif%}

{% if section5 %}
<section >
  <div class="container">
    <div class="padding-top-80">

      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <div class="section-header center">
            <h2 class="medium margin-bottom-40">{{settings.about_meet_our_team}}</h2>
            <p class="medium">{{settings.about_meet_our_team_des}}</p>
          </div><!-- /.section-header -->
        </div>
      </div><!-- /.row -->

      <div class="row">
        {% for i in (1..6) %}
        {%capture about_5_col_name%}about_5_col_{{i}}_name{%endcapture%}
        {%capture about_5_col_job%}about_5_col_{{i}}_job{%endcapture%}
        {%capture about_5_col_img%}about_5_col_{{i}}.jpg{%endcapture%}
        {%capture about_5_col_social%}about_5_col_{{i}}_social{%endcapture%}

        <div class="col-md-4 col-sm-4 col-xs-12">

          <div class="about-us-team awe-media margin-bottom-50">
            <div class="awe-media-header">
              <div class="awe-media-image">
                {{ about_5_col_img | asset_url | img_tag }}
              </div><!-- /.awe-media-image -->

              <div class="awe-media-hover dark fullpage">
                <div class="fp-table">
                  <div class="fp-table-cell center">
                    <h6 class="upper margin-bottom-20">Connect</h6>
                    <ul class="list-socials list-large list-light">
                      {{settings[about_5_col_social]}}
                    </ul>
                  </div>
                </div>
              </div><!-- /.awe-media-hover -->
            </div><!-- /.awe-media-header -->

            <div class="awe-media-body center">
              <h3 class="awe-media-title text-upper">
                <a href="#" title="{{settings[about_5_col_name]}}">{{settings[about_5_col_name]}}</a>
              </h3>

              <p class="awe-media-caption">
                <span class="bold">{{settings[about_5_col_job]}}</span>
              </p>
            </div><!-- /.awe-media-body -->
          </div><!-- /.awe-media -->

        </div>
        {% endfor %}
      </div><!-- /.row -->

    </div><!-- /.padding-top-80 -->
  </div><!-- /.container -->
</section><!-- /section -->
{%endif %}