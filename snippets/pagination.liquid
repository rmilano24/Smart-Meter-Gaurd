

<ul class="pagination">
    {% if paginate.previous %}
    <li class="pagination-prev"><a href="{{ paginate.previous.url }}" title="{{ 'collections.toolbar.previous' | t }}"  {% if settings.enable_multilang %}data-translate="collections.toolbar.previous" translate-item="title"{% endif %}><span {% if settings.enable_multilang %}data-translate="collections.toolbar.previous"{% endif %}><i class="icon icon-arrow-prev"></i></span></a></li>
    {% else %}
    <li class="disabled"><span {% if settings.enable_multilang %}data-translate="collections.toolbar.previous"{% endif %}><i class="icon icon-arrow-prev"></i></span></li>
    {% endif %}

    {% for part in paginate.parts %}
      {% if part.is_link %}
      <li>
        <a href="{{ part.url }}">{{ part.title }}</a>
      </li>
      {% else %}
        {% if part.title == paginate.current_page %}
        <li class="active"><span>{{ part.title }}</span></li>
        {% else %}
        <li><span>{{ part.title }}</span></li>
        {% endif %}
      {% endif %}
    {% endfor %}

    {% if paginate.next %}
    <li class="pagination-next"><a href="{{ paginate.next.url }}" title="{{ 'collections.toolbar.next' | t }}"  {% if settings.enable_multilang %}data-translate="collections.toolbar.next" translate-item="title"{% endif %}><span {% if settings.enable_multilang %}data-translate="collections.toolbar.next"{% endif %}><i class="icon icon-arrow-next"></i></span></a></li>
    {% else %}
    <li class="disabled"><span {% if settings.enable_multilang %}data-translate="collections.toolbar.next"{% endif %}><i class="icon icon-arrow-next"></i></span></li>
    {% endif %}
  </ul>