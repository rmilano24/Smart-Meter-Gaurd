#Product Detail
----------------------------------------*/
.product-media{
  position: relative;
}

.single-option-radio {
  border: 0;
  position: relative;
  input {
    @include visuallyHidden;
    .lt-ie9 & {
      position: relative;
      height: auto;
      width: auto;
      clip: initial;
    }
  }

  label {  
    position: relative;
    display: inline-block;
    line-height: 1;
    padding: 9px 11px;
    margin: 3px 4px 1px 3px;
    font-size: em(13px);
    font-style: normal;

    border: 1px solid transparent;

    &.disabled:before {
      position: absolute;
      content: "";
      left: 50%;
      top: 0;
      bottom: 0;
      border-left: 1px solid;
      border-color: #ddd;
      @include transform(rotate(45deg));

      .lt-ie9 & {
        display: none;
      }
    }

    &:active,
    &:focus {

      border-color: #111;
    }
  }

  //style selected radio button's label
  input[type='radio']:checked + label {
    border-color: #111;
  }

}

