.lena-banner{
  a{
    transition: all 0.3s ease-in-out 0s;
    -moz-transition: all 0.3s ease-in-out 0s;
    -ms-transition: all 0.3s ease-in-out 0s;
    -webkit-transition: all 0.3s ease-in-out 0s;
    -o-transition: all 0.3s ease-in-out 0s;
  }
  img{
    display: block;
  }

  /* BORDER STYLE */
  &.border-style{

    .box-content{
      margin: 5px 0;
    }

    .shop-cat-item{
      position: relative;


      &:before, &:after{
        display: block;
        width: 100%;
        height: 100%;
        content: "";
        border: 1px solid rgba(0, 0, 0, 0.2);
        position: absolute;
        top: -5px;
        left: -5px;
        z-index: 1;
      }

      &:before{
        top: 5px;
        left: 5px;
      }
    }
  }

  /* SHADOW STYLE */
  &.shadow-style{
    .shop-cat-item {
      .shop-cat-thumb:after {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.7);
        opacity: 0;
        visibility: hidden;
        display: block;
        content: "";
        transition: all 0.3s ease-in-out 0s;
        -moz-transition: all 0.3s ease-in-out 0s;
        -ms-transition: all 0.3s ease-in-out 0s;
        -webkit-transition: all 0.3s ease-in-out 0s;
        -o-transition: all 0.3s ease-in-out 0s;
      }

      &:hover{
        .shop-cat-thumb:after {
          opacity: 1;
          visibility: visible;
        }
      }
    }
  }
}




