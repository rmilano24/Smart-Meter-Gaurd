// GLOBAL
main {
  margin-bottom: 0px;
}


// HEADER

.top-gradient {
  background-image: linear-gradient(-90deg, #1EB6DC 2%, #F03454 98%);
  height: 6px;
}

header {
  .awemenu-nav {
    padding: 10px 0;
    height: 102px;

    .navbar-icons {
      border-left: none;
      border-right: none;
      .CartCount {
        background: #F03454;
        background-image: none;
        border-radius: 20px;
      }
    }
  }

}

// FOOTER

footer {
  .footer-wrapper {
    color: #E1E1E1;
    #block-about {
      h3 {
        display: none;
      }
      p {
        max-width: 80%;
      }
    }
    .widget {
      .widget-title {
        font-size: 20px;
        margin-top: 15px;
        margin-bottom: 39px;
      }
      a {
        color: #1EB6DC;
      }
      address {
        margin-bottom: 0px;
        font-weight: normal;
      }
      ul {
        li {
          a {
            padding-top: 0px;
          }
        }
      }
    }
  }
  #payments {
    text-align: center;
    border-top: 1px solid #333333;
    padding: 30px 0;
  }
}



