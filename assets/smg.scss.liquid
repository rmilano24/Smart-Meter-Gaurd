// GLOBAL

body {
  font-family: 'Open Sans', sans-serif;
  color: #787878;
}

h1,h2,h3,h4,h5 {
  font-family: 'Montserrat', Arial, sans-serif;
}

main {
  margin-bottom: 0px;
}

.template-page {
  main {
    margin: 60px 0;
    h1 {
      text-align: center;
      font-size: 38px;
      color: #323333;
      margin-top: 0px;
    }
  }
}

.seperator-red {
  background: url({{ 'seperator-red.svg' | asset_url }}) center center no-repeat;
  height: 14px;
  width: 104px;
  margin: 0 auto 50px auto;
}

// HEADER

.top-gradient {
  background-image: linear-gradient(-90deg, #1EB6DC 2%, #F03454 98%);
  height: 6px;
}

header {
  .awemenu-nav {
    padding: 10px 0;
    height: 102px;

    .navbar-icons {
      border-left: none;
      border-right: none;
      .CartCount {
        background: #F03454;
        background-image: none;
        border-radius: 20px;
      }
    }
  }
}

.awemenu-left .awemenu .awemenu-item>a, .awemenu-default .awemenu .awemenu-item>a {
  font-family: 'Open Sans', sans-serif;
  font-size: 16px;
  color: #333333;
  letter-spacing: 1px;
  padding:0 10px 0 20px !important;
  &:hover {
    color: #333;
  }
}

.awemenu {
  li:before {
    content: "//";
    position: absolute;
    top: 30px;
    color: #F03454;
  }
  li {
    &:first-child:before {
      content: "";
    }
  }
}

.icon-shopping-bag:before {
  color: #333333;
}

// FOOTER

footer {
  .footer-wrapper {
    color: #E1E1E1;
    #block-about {
      h3 {
        display: none;
      }
      p {
        max-width: 80%;
      }
    }
    .widget {
      .widget-title {
        font-size: 20px;
        margin-top: 15px;
        margin-bottom: 39px;
      }
      a {
        color: #1EB6DC;
      }
      address {
        margin-bottom: 0px;
        font-weight: normal;
      }
      ul {
        li {
          a {
            padding-top: 0px;
            color: #E1E1E1;
            padding: 0px;
            &:hover {
              color: #1EB6DC;
            }
          }
        }
      }
    }
  }
  #block-quick-links {
    ul {
      margin-left: -11px;
      a {
        &:before {
          content: ">";
          color: #F03454;
          padding-right: 4px;
          font-size: 20px !important;
        }
      }
    }
  }
  #payments {
    text-align: center;
    border-top: 1px solid #333333;
    padding: 30px 0;
  }
}



// COMPONENTS

// 1. testimonail slider

.home12-testimonial {
  background-image: url({{ 'bg_wave-texture.png' | asset_url }});
  background-position: top left;
  background-repeat: repeat !important;
  p {
    font-size: 30px !important;
    font-family: 'Montserrat', sans-serif !important;
    font-style: italic;
    list-style: 1px;
    text-transform: uppercase;
  }
  .owl-carousel .owl-dots  {
    color: #fff;
    .active {
      color: #F03454;
    }
    .owl-dot span:before {
      font-size: 14px;
    }
  }
}

.owl-carousel .owl-dots .owl-dot.active>span:before {
  content: "\e608";
}



// PAGES

// Home

.tp-caption  {
  margin: 0 auto !important;
  display: block;
  position: absolute !important;
  left: 25% !important;
  background: url({{ 'seperator-white.svg' | asset_url }}) no-repeat center bottom;
  line-height: 130px !important;
  font-size: 60px !important;
}

.tp-caption:last-of-type {
  border: 1px solid red !important;
  font-size: 18px !important;
  font-family: 'Open Sans', sans-serif !important;
  background-image: none !important;
}

.rv-button {
  font-size: 15px !important;
  line-height: 20px !important;
}

// FAQ'S

.panel-title>a, .panel-title>a:active{
	display:block;
	padding:15px;
  color:#555;
  font-size:16px;
  font-weight:bold;
	text-transform:uppercase;
	letter-spacing:1px;
  word-spacing:3px;
	text-decoration:none;
}
.panel-heading  a:before {
   content: ">";
   padding-right: 10px;
   float: left;
   transition: all 0.5s;
   color: #1EB6DC;
   font-size: 24px !important;
   position: relative;
   top: -5px;
}
.panel-heading.active a:before {
	-webkit-transform: rotate(90deg);
	-moz-transform: rotate(90deg);
	transform: rotate(90deg);
  top: 1px;
}

.panel {
  box-shadow: none !important;
  border-radius: 0px !important;
  border: 1px solid #F1F3F7;
  .panel-heading {
    background: #fff;
    border-top-right-radius: 0px;
    border-top-left-radius: 0px;
    padding: 0px;
  }
}

.panel-group .panel-heading+.panel-collapse>.panel-body, .panel-group .panel-heading+.panel-collapse>.list-group {
  border-top: none !important;
}

.panel-title {
  padding: 5px 0;
}

.panel-title>a {
  font-weight: normal !important;
  color: #323333 !important;
  font-size: 16px !important;
}

.panel-body {
  padding-top: 0px;
  font-size: 15px;
  line-height: 24px;
  padding-left: 38px;
  margin-top: -5px;
}

.panel-body {
  ul, ol {
    padding: 20px;
    li {
      padding: 5px 0;
    }
  }
}

.panel-group .panel+.panel {
  margin-top: 20px;
}
