// GLOBAL

body {
  font-family: 'Open Sans', sans-serif;
  color: #787878;
  font-size: 15px;
  line-height: 24px;
}

h1,h2,h3,h4,h5 {
  font-family: 'Montserrat', Arial, sans-serif;
}

h1 {
  text-align: center;
  font-size: 38px;
  color: #323333;
  margin-top: 0px;
  text-transform: uppercase;
}

a {
  color: #1EB6DC;
}

.btn-primary {
  border-radius: 50px;
  border-width: 2px;
}

.btn-primary:hover {
  background: #1EB6DC;
  border-color: #1EB6DC;
  opacity: 0.8;
}

.ghost {
  background: transparent;
  color: #1EB6DC;
  border-width: 2px;
}

.template-index {
  main {
    margin: 0px;
  }
}

main {
    margin: 60px 0;
}


.seperator-red {
  background: url({{ 'seperator-red.svg' | asset_url }}) center center no-repeat;
  height: 14px;
  width: 104px;
  margin: 0 auto 50px auto;
}

// HEADER

.top-gradient {
  background-image: linear-gradient(-90deg, #1EB6DC 2%, #F03454 98%);
  height: 6px;
}

header {
  .awemenu-nav {
    padding: 10px 0;
    height: 102px;
    border-bottom: 1px solid #F1F3F7;
    .navbar-icons {
      border-left: none;
      border-right: none;
      .CartCount {
        background: #F03454;
        background-image: none;
        border-radius: 20px;
      }
    }
  }
}

.awemenu-left .awemenu .awemenu-item>a, .awemenu-default .awemenu .awemenu-item>a {
  font-family: 'Open Sans', sans-serif;
  font-size: 16px;
  color: #333333;
  letter-spacing: 1px;
  padding:0 10px 0 20px !important;
  &:hover {
    color: #333;
  }
}

.awemenu {
  li:before {
    content: "//";
    position: absolute;
    top: 28px;
    color: #F03454;
  }
  li {
    &:first-child:before {
      content: "";
    }
  }
}

.icon-shopping-bag:before {
  color: #333333;
}

// FOOTER

footer {
  .footer-wrapper {
    color: #E1E1E1;
    #block-about {
      h3 {
        display: none;
      }
      p {
        max-width: 80%;
      }
    }
    .widget {
      .widget-title {
        font-size: 20px;
        margin-top: 15px;
        margin-bottom: 42px;
      }
      a {
        color: #1EB6DC;
      }
      address {
        margin-bottom: 0px;
        font-weight: normal;
      }
      ul {
        margin-top: -3px;
        li {
          a {
            padding-top: 0px;
            color: #E1E1E1;
            padding: 0px;
            &:hover {
              color: #1EB6DC;
            }
          }
        }
      }
    }
  }
  #block-quick-links {
    ul {
      margin-left: -11px;
      a {
        &:before {
          content: ">";
          color: #F03454;
          padding-right: 4px;
          font-size: 20px !important;
        }
      }
    }
  }
  #payments {
    text-align: center;
    border-top: 1px solid #333333;
    padding: 30px 0;
  }
}



// COMPONENTS

// 1. testimonail slider

.home12-testimonial {
  background-image: url({{ 'bg_wave-texture.png' | asset_url }});
  background-position: top left;
  background-repeat: repeat !important;
  p {
    font-size: 30px !important;
    font-family: 'Montserrat', sans-serif !important;
    font-weight: bold;
    font-style: italic;
    list-style: 1px;
    text-transform: uppercase;
  }
  .owl-carousel .owl-dots  {
    color: #fff;
    .active {
      color: #F03454;
    }
    .owl-dot span:before {
      font-size: 14px;
    }
  }
}

.owl-carousel .owl-dots .owl-dot.active>span:before {
  content: "\e608";
}



// PAGES

// Home

.main-header  {
  background: url({{ 'seperator-white.svg' | asset_url }}) no-repeat center bottom;
}

main .main-slider .tp-caption.rv-button {
  border-radius: 50px;
  border-width: 2px !important;
  background: #1EB6DC !important;
  border-color: #1EB6DC !important;
  color: #fff;
  font-weight: bold !important;
  letter-spacing: 2px;
}

main .main-slider .tp-caption.rv-button.btn-white.btn-outline {
  background: transparent;
  color: #fff !important;
  border-width: 2px !important;
  border-color: #1EB6DC !important;
}


.container-full-width {
  width: 90%;
  margin: 0 auto;
  .product {
    margin-bottom: 80px
  }
  .product:nth-child(even) {
     .row {
       .product-container {
         -webkit-flex-direction: row-reverse; /* Safari */
          flex-direction: row-reverse;
          display: -webkit-flex; /* Safari */
          display: flex;
          img {
            -moz-transform: scaleX(-1);
        -o-transform: scaleX(-1);
        -webkit-transform: scaleX(-1);
        transform: scaleX(-1);
        filter: FlipH;
        -ms-filter: "FlipH";
          }
       }
     }
     .product-media {
       background-image: linear-gradient(-90deg, #1eb6dc 2%, #f03454 98%);
       box-shadow: 0 6px 10px 5px rgba(0,0,0,0.06);
       .product-thumbnail {
         top: -25px;
         left: 25px;
         box-shadow: 0 6px 10px 5px rgba(0,0,0,0.06);
       }
     }
  }
  .product-media {
    background-image: linear-gradient(-90deg, #f03454 2%, #1eb6dc 98%);
    box-shadow: 0 6px 10px 5px rgba(0,0,0,0.06);
    .product-thumbnail {
      top: -25px;
      right: 25px;
      box-shadow: 0 6px 10px 5px rgba(0,0,0,0.06);
    }
  }
  .product-body {
    padding: 0 30px;
    .product-name {
      margin-top: 0px;
      a {
        color: #323333;
        font-size: 25px;
        letter-spacing: 1px;
      }
    }
    .product-features {
      h3 {
        color: #323333;
        font-size: 16px;
        text-transform: uppercase;
        letter-spacing: 0.75px;
      }
      ul {
        margin-left: -62px;
        list-style-type: none;
        li {
          font-size: 14px;
          &:before {
            content: ">";
            padding-right: 10px;
            color: #F03454;
            font-size: 22px;
          }
        }
      }
    }
  }
}




// FAQ'S

.panel-title>a, .panel-title>a:active{
	display:block;
	padding:15px;
  color:#555;
  font-size:16px;
  font-weight:bold;
	text-transform:uppercase;
	letter-spacing: 0.70px;
  word-spacing:3px;
	text-decoration:none;
}
.panel-heading  a:before {
   content: ">";
   padding-right: 10px;
   float: left;
   transition: all 0.5s;
   color: #1EB6DC;
   font-size: 24px !important;
   position: relative;
   top: -5px;
}
.panel-heading.active a:before {
	-webkit-transform: rotate(90deg);
	-moz-transform: rotate(90deg);
	transform: rotate(90deg);
  top: 1px;
}

.panel {
  box-shadow: none !important;
  border-radius: 0px !important;
  border: 1px solid #F1F3F7;
  .panel-heading {
    background: #fff;
    border-top-right-radius: 0px;
    border-top-left-radius: 0px;
    padding: 0px;
  }
}

.panel-group .panel-heading+.panel-collapse>.panel-body, .panel-group .panel-heading+.panel-collapse>.list-group {
  border-top: none !important;
}

.panel-title {
  padding: 5px 0;
}

.panel-title>a {
  font-weight: normal !important;
  color: #323333 !important;
  font-size: 16px !important;
}

.panel-body {
  padding-top: 0px;
  font-size: 15px;
  line-height: 24px;
  padding-left: 38px;
  margin-top: -5px;
}

.panel-body {
  ul, ol {
    padding: 20px;
    li {
      padding: 5px 0;
    }
  }
}

.panel-group .panel+.panel {
  margin-top: 20px;
}

// ABOUT

#about-us {
  .wysiwyg {
    column-count: 2;
    column-fill: balance;
    -moz-column-fill: balance;
    -webkit-column-fill: balance;
    column-gap: 80px;
    p:first-of-type:first-letter {
        font-size: 35px;
        line-height: 0px;
    }
    address {
      font-style: italic !important;
    }
  }
}

// OUR PRODUCTS

.template-collection, .relared-products {
  .col-md-4 {
    padding: 0 30px;
  }
  .product-media {
    background-image: linear-gradient(-90deg, #f03454 2%, #1eb6dc 98%);
    box-shadow: 0 6px 10px 5px rgba(0,0,0,0.06);
    .product-thumbnail {
      top: -10px;
      left: -10px;
      box-shadow: 0 6px 10px 5px rgba(0,0,0,0.06);
    }
  }
  .product-name {
    margin-bottom: 10px;
    a {
      color: #323333;
      font-size: 16px;
    }
  }
  .product-price {
    color: #323333;
    font-size: 24px;
    font-weight: bold;
    letter-spacing: 1px;
    font-family: 'Montserrat', sans-serif !important;
  }
}




// SINGLE PRODUCT

.template-product {
  main {
    margin-top: 60px;
    h1 {
      font-weight: normal;
      font-size: 28px;
      letter-spacing: 1px;
      color: #323333;
      text-align: left;
    }
    .product-details-wrapper .product-features h3 {
      color: #323333;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }
    .product-details-wrapper .product-features ul>li:before {
      content: ">";
      font-weight: bold;
      color: #F03454;
      font-size: 22px;
    }
    .product-details-wrapper .product-price label {
      color: #323333;
      font-size: 38px;
      margin: 20px 0;
    }
    .product-single-quantity label {
      color: #323333;
    }
    .product-socials {
      padding: 15px 0;
      border-top: 1px solid #F1F3F7;
      border-bottom: 1px solid #F1F3F7;
      a {
        .icon {
          color: #1EB6DC;
        }
      }
    }
    .product-details-left  {
      border-bottom: 1px solid #F1F3F7;
      .product-details .tab-content {
        border-left: 1px solid #F1F3F7;
      }
      .product-details .nav {
        padding-left: 30px;
      }
      .product-details .nav>li>a {
          color: #323333;
          letter-spacing: 1px;
      }
      .product-details .nav>li.active>a {
        color: #1EB6DC;
        &:before {
          content: ">";
          font-family: FontAwesome;
          font-size: 22px;
          color: #F03454;
          font-weight: bold;
          margin-right: 10px;
          margin-left: -23px;
        }
      }
    }
    .relared-products {
      h3 {
        color: #323333;
        font-size: 28px;
      }
    }
  }
  .owl-carousel .owl-item.focus {
    border: 3px solid #1EB6DC;
  }
}

// GALLERY

#gallery, #videos {
  .row {
    margin-bottom: 30px !important;
    &:last-of-type {
      margin-bottom: 0px;
    }
  }
  .fancybox-arrow {
    opacity: 1;
    &:after {
      background-color: transparent !important;
      background-image: url({{ 'arrow_next.svg' | asset_url }}) !important;
      background-size: 66px 57px;
      width: 48px;
      height: 57px;
    }
  }
  .fancybox-arrow--left {
    margin-left: 50px;
  }
  .fancybox-arrow--right {
    margin-right: 50px;
  }
}

// OUR PRODUCTS

.product-grid .product-thumbnail img {
  transition: none;
}

// CART

.cart-form {
  .product-remove {
    a {
      color: #F03454;
    }
  }
  .product-name {
    color: #323333;
    text-transform: uppercase;
    font-size: 12px;
    img {
      margin-right: 15px
    }
    a {
      color: #323333;
    }
  }
  .table>tr {
    border-bottom: 1px solid #F1F3F7 !important;
  }
  .table>thead>tr>th {
    color: #323333;
    text-transform: uppercase;
    font-size: 12px;
    font-family: 'Montserrat', Arial, sans-serif;
  }
  .price {
    font-family: 'Montserrat', Arial, sans-serif;
    color: #323333 !important;
    font-size: 26px;
  }
   .quantity {
     border: 1px solid #F1F3F7;
     .plus, .minus {
       color: #1EB6DC;
     }
   }
   .cart-table {
     border-bottom: 1px solid #F1F3F7;
     margin-bottom: 0px;
   }
}

#mini-cart {
  .btn-cart {
    background: transparent;
    color: #1EB6DC;
    border-width: 2px;
    border-radius: 50px;
    border-color: #1EB6DC;
    &:hover {
      background: #1EB6DC;
      color: #fff;
    }
  }
}

// BREAKPOINTS

@media (max-width: 1199px) {
  .awemenu-nav {
    border-bottom: none !important;
  }
}

@media all and (max-width: 991px) {

  .container-full-width {
    .product:nth-child(even) {
       .row {
         .product-container {
           -webkit-flex-direction: row-reverse; /* Safari */
            flex-direction: row-reverse;
            display: inline; /* Safari */
            display: inline;
            img {
              -moz-transform: scaleX(-1);
          -o-transform: scaleX(-1);
          -webkit-transform: scaleX(-1);
          transform: scaleX(-1);
          filter: FlipH;
          -ms-filter: "FlipH";
            }
         }
       }
       .product-media {
         background-image: linear-gradient(-90deg, #1eb6dc 2%, #f03454 98%);
         box-shadow: 0 6px 10px 5px rgba(0,0,0,0.06);
         .product-thumbnail {
           top: -15px;
           left: 15px;
           box-shadow: 0 6px 10px 5px rgba(0,0,0,0.06);
         }
       }
    }
    .product-media {
      .product-thumbnail {
        top: -15px;
        left: 15px;
      }
    }
  }



  footer {
    .container {
      width: 100% !important;
    }
  }
}

@media all and (min-width: 768px) and (max-width: 991px) {
  footer {
    h3 {
      font-size: 17px;
    }
    p, a, address {
      font-size: 13px;
    }
    .widget .list-socials>li>a {
      margin-right: 10px;
    }
  }
}

@media all and (max-width: 767px) {

  .product-grid .product-name {
    white-space: normal;
  }

  footer {
    #block-about {
      text-align: center;
    }
    #block-quick-links, #block-social {
      padding: 0px;
    }
  }
  #payments {
    svg {
      width: 80%;
    }
  }
}
